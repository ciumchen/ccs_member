.mui-bar-nav {
    box-shadow: none;
    background: -webkit-gradient(linear, 100% 0, 0 0, from(#e75b0e), to(#eb3d3e));
    background: -webkit-linear-gradient(right, #e75b0e, #eb3d3e);
    background: -moz-linear-gradient(right, #e75b0e, #eb3d3e);
    background: -o-linear-gradient(right, #e75b0e, #eb3d3e);
    background: linear-gradient(right, #e75b0e, #eb3d3e);
}
.mui-pull-right{
    padding: 10px 0;
}
.mui-bar-nav.mui-bar .mui-pull-right .mui-icon-search{
    padding: 0 20px;
    vertical-align: middle;
}
.mui-pull-right img{
    width: 25px;
}
.mui-bar-nav.mui-bar .mui-icon{
    color:#fff;
}
.mui-bar-nav .mui-title{
    text-align: left;
    color:#fff;
    padding: 2px 0;
}
.mui-bar-nav~.mui-content{
    padding-bottom:50px;
    font-size:14px;
}

.app-tabs .tab-control-item{
    line-height: 38px;
    display: table-cell;
    overflow: hidden;
    width: 1%;
    -webkit-transition: background-color .1s linear;
    transition: background-color .1s linear;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #333;
    border-color: #007aff;
    font-size: 14px;
    background-color: #fff;
}
.app-tabs .tab-control-item.tab-active{
    color: #e81924;
    border-bottom: 2px solid #e81924;
}
.tab-control-body{
    position: relative;
    display: none;
}
.tab-control-body.tab-active{
    display: block;
}
.button{
    display: inline-block;
    padding: 2px 15px;
    border: 1px solid #707070;
    border-radius: 25px;
    font-size: 12px;
    color:#707070;
    line-height: 1.5em;
}
.button:not(:first-child){
    margin-left:1%;
}
.button.disabled{
    color:#ccc;
    border: 1px solid #ccc;
}
.floatRight{
    float: right;
}
.textRight{
    text-align: right;
}
.fontSmall{
    font-size: small;
}
.imgContent img{
    width:100%;
    min-height: 100%;
}
.cardItem{
    background-color: #fff;
    margin: 10px 0;
}
.cardItem .card-header{
    padding: 6px 5%;
    line-height: 25px;
}
.cardItem .card-header .deleBtn{
    float: right;
    color:#e81924;
    border-color: #e81924;
}
.cardItem .card-header .mui-icon{
    font-size:19px;
}
.card-content .mui-row{
    padding: 5px 5%;
}
.card-content .goodsInfo{
    background-color: #f8f8f8;
}
.goodsInfo{
    margin-bottom: 10px;
}
.goodsInfo .mui-col-xs-8 div,.goodsInfo .mui-col-xs-8 small{
    max-width: 100%;
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis; 
}
.imgContent{
    width: 90px;
    height: 90px;
    overflow: hidden
}
.goodsInfo small{
    display: block;
    color:#8c8c8c;
}
.cardItem .card-footer{
    padding: 10px 5%;
    border-top: 1px solid #f8f8f8;
    text-align: right;
}
.noOrder{
    padding: 5%;
    text-align: center;
    color: #8c8c8c;
}