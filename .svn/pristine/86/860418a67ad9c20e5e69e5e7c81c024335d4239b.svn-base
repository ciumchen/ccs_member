/* 顶部title样式 */
.mui-bar-nav {
    box-shadow: none;
    background: -webkit-gradient(linear, 100% 0, 0 0, from(#e75b0e), to(#eb3d3e));
    background: -webkit-linear-gradient(right, #e75b0e, #eb3d3e);
    background: -moz-linear-gradient(right, #e75b0e, #eb3d3e);
    background: -o-linear-gradient(right, #e75b0e, #eb3d3e);
    background: linear-gradient(right, #e75b0e, #eb3d3e);
    border-bottom: #fff solid 1px;
}
.mui-pull-right{
    padding: 10px 0;
}
.mui-bar-nav.mui-bar .mui-pull-right .mui-icon-search{
    padding: 0 20px;
    vertical-align: middle;
}
.mui-pull-right img{
    width: 25px;
}
.mui-bar-nav.mui-bar .mui-icon{
    color:#fff;
}
.mui-bar-nav .mui-title{
    text-align: left;
    color:#fff;
    padding: 2px 0;
    margin-top: -2px;
    margin-left: -10px;
}

/* 底部 nav-tab */
.home-bom-bor .mui-tab-item.mui-active{
	color: #e60012;
}
.home-bom-bor{
	-webkit-box-shadow: none;
    box-shadow: none; 
    border-top: 1px solid #DDD;
    background-color: #FFF;
}
