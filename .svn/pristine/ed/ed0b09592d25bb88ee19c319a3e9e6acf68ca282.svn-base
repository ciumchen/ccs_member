.mui-top-section{
	position: relative;
    height: 130px;
    background: url(../../img/myInfo/myinfoBanner.png)no-repeat;
    width: 100%;
    background-size: 100% 100%;
    filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='../../img/myInfo/myinfoBanner.png))',sizingMethod='scale');
}

.account-setting{
    position: absolute;
    top: 7px;
    right: 15px;
    color: #FFF;
}
.account-setting .mui-icon-gear {
	font-size: 20px;
}
.account-setting .mui-icon-gear>span{
	font-size: 15px;
}

.account-info-detial{
	position: absolute;
    top: 30px;
    width: 100%;
    clear: both;
}
.img-info{
	margin-left: 15px;
	float: left;
}   
.img-info img{
    height: 60px;
    width: 60px;
    border-radius: 50%;
}
/* 名字&积分 */
.detail-wrap {
	margin-left: 10px;
    float: left;
    padding: 10px 0;
}
.name-detial{
	color: #FFF;
    text-align: center;
    line-height: 17px;
}
.mui-badge-purple, .mui-badge-royal{
	background-color: #ba3b21;
	line-height: 12px;
}
.jifen-detial .sg-purple{
	background-color: #d0321e;
	color: #FFF;
	border: 1px solid #c2bab5;
}
/* .tuijian-border{
	border: 1px solid #f39800;
} */
/* 今日牌价 */
.today-price {
    float: right;
    margin-right: 15px;
    margin-top: 0;
    padding: 10px 0;
}
.today-price-box {
	width: 80px;
    height: 41px;
    line-height: 1.2;
    text-align: center;
    font-size: 14px;
    border: 1px solid #fff;
    color: #fff;
    background: #ef2620;
    padding: 4px 0;
}
.today-price-box .number {
	font-size: 9px;
}
/* 点击签到 */
.click-check {
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -40px;
}
.click-check img {
	max-width: 80px;
	display: block;
}
/*************************/
.mes-info{
	height: 40px;
	background-color: #FFF;
	padding: 10px 0 10px 10px;
}
.mes-info .mes-toast{
	width: 30px;
	position: absolute;
    margin-top: 2px;
}
.mess-title{
	font-size: 15px;
	font-weight: bold;
	padding-left: 30px;
}
.mess-content{
	font-size: 12px;
	color: #626262;
    float: right;
}
.mes-info .mui-icon-arrowright{
	float: right;
	color: #818181;
    margin-top: -3px;
    margin-right: 10px;
}
.mes-info .point{
    width: 5px;
    vertical-align: top;
}
/*******************************/
.common-section {
	margin-top: 10px;
	background-color: #FFF;
}
.common-section .bonus-title{
    padding: 8px 0 8px 15px;
    border-bottom: 1px solid #f3f3f3;
}
.common-section .bonus-title img{
	width: 20px;
	vertical-align: middle;
    margin-top: -4px;
}
.common-section .bonus-title-label{
	color:#010101;
	font-weight: bold;
    font-size: 15px;
}
.more-info{
    float: right;
    font-size: 14px;
    color: #727272;
}
.bonus-title .mui-icon-arrowright{
	float: right;
	color: #818181;
    margin-top: -3px;
    margin-right: 10px;
}
.common-section .mui-icon {
    height: 28px;
    width: 28px;	
	position: relative;
}
.common-section .mui-icon img{
	width: 28px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.other-section .mui-icon img{
	width: 40px;
}
.common-section .mui-grid-9{
	background-color: #FFF;
	border: 0;
}
.common-section .mui-grid-view.mui-grid-9 .mui-table-view-cell{
	border: 0;
	padding: 0;
}
.common-section .mui-grid-view.mui-grid-9 .mui-table-view-cell .mui-media-body{
	color: #767676;
	font-size: 14px;
}
.common-section .mui-grid-view.mui-grid-9 .mui-table-view-cell .title{
	color: #010101;
	font-size: 14px;
}
.common-section .mui-grid-view.mui-grid-9 .mui-table-view-cell .other-title{
	color: #444444;
	font-size: 13px;
}
.mui-content{
	margin-bottom: 51px;
}

